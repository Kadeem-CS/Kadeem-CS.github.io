    }

    .status.stalemate {
      background: rgba(135, 206, 235, 0.2);
      border: 1px solid skyblue;
    }

    .moves-list {
      max-height: 260px;
      overflow-y: auto;
      font-size: 0.85rem;
      border-top: 1px solid rgba(0,0,0,0.1);
      padding-top: 6px;
      margin-top: 6px;
    }

    .moves-list ol {
      padding-left: 20px;
      margin: 0;
    }

    .moves-list li {
      margin-bottom: 2px;
    }

    .controls {
      display: flex;
      flex-wrap: wrap;
      gap: 6px;
      margin-top: 8px;
    }

    .tagline {
      margin-top: 12px;
      font-size: 0.85rem;
      opacity: 0.8;
      text-align: center;
    }
