    const PIECES = {
      wP: "♙", wR: "♖", wN: "♘", wB: "♗", wQ: "♕", wK: "♔",
      bP: "♟", bR: "♜", bN: "♞", bB: "♝", bQ: "♛", bK: "♚",
    };

    function createInitialBoard() {
      const empty = Array(8).fill(null);
      const board = [];
      board.push([
        { type: "R", color: "b" },
        { type: "N", color: "b" },
        { type: "B", color: "b" },
        { type: "Q", color: "b" },
        { type: "K", color: "b" },
        { type: "B", color: "b" },
        { type: "N", color: "b" },
        { type: "R", color: "b" },
      ]);
      board.push(Array(8).fill({ type: "P", color: "b" }));
      for (let i = 0; i < 4; i++) board.push([...empty]);
      board.push(Array(8).fill({ type: "P", color: "w" }));
